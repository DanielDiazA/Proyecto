<style>
  .row {
    font-family: "Calibri", "sans-serif";
    bottom: 0;
  }
</style>
<script>
  const refreshButton = document.querySelector('.btn btn-dark shadow-lg');

  const refreshPage = () => {
    location.reload();
  }

  refreshButton.addEventListener('click', refreshPage)

</script>
<br>
<div class="container p-5">
  <h4 class="h10w">- Productos NeverLostdog -</h4>
  <br>
<div class="row" style="width: 100%">
  <!--<div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">-->
  <div id="success" class="alert alert-success {{#if noMessages}}d-none{{/if}}">
    {{successMsg}}
  </div>
</div>
<br><br>
{{#each products}}
<div class="row">
  {{#each this}}
  {{#operaciones this.cantidad '>' 0}}
  <div class="col-md-4  ">
    <div class="thumbnail bordertop ">
      <br>
      <img class="img-responsive " src="{{this.imagePath}}" alt="..."><br>
      <div class="caption">
        <h4 class="h3w">{{this.title}}</h4>
        <p class="h5w">{{this.description}}</p>
        <br>
        <div class="clearfix">
          <div class="price">
            <h6 class="blanco h5w">{{this.price}} €</h6>
          </div>
         
          <div class="stock">
            <h6 class="verde stock">En stock : {{this.cantidad}} uds</h6>
          </div>
          <br>
          <p>
            <!--<a href="#" class="btn btn-primary pull-right" role="button">Buy Now</a>-->
            <a href="/add_to_cart/{{this.id}}" class="btn btn-dark shadow-lg naranja" role="button"
              style="float: right, margin-bottom:0">Añadir al carrito<i class="fas fa-cart-arrow-down"></i></a>
          </p>
          <br>
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <div class="col-md-4 ">
    <div class="thumbnail2 bordertop">
      <br>
      <img class="img-responsive " src="{{this.imagePath}}" alt="..."><br>
      <div class="caption">
        <h4 class="h3w">{{this.title}}</h4>
        <p class="h5w">{{this.description}}</p>
        <br>
        <div class="clearfix">
          <div class="price">
            <h6 class="blanco h5w">{{this.price}} €</h6>
          </div>
         
          <div class="stock">
            <h6 class="rojo">En stock : {{this.cantidad}} uds</h6>
          </div>
          <br>
          <br>
         <div class="centro">
            <!--<a href="#" class="btn btn-primary pull-right" role="button">Buy Now</a>-->
            <stroke class="h6w tachado" style="text-decoration:line-through;text-decoration-thickness: 2px;">AGOTADO</stroke>
          </div>
          <br>
        </div>
      </div>
    </div>
  </div>

  {{/operaciones}}
  {{/each}}
</div>
{{/each}}
</div>