<div class="container p-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card mt-4 text-center card colorfondopanel bordertop shadow-lg">
        <br>
        <h1 class="h2w">
          Registrarse
          <hr class="grisclaro">
        </h1>
        
        <img class="rounded-circle mx-auto d-block logo m-4" src="/img/user.png" alt="Logo">
        <div class="card-body ">
          <form action="/users/signup" method="POST">
            <!--Nombre-->
            <div class="form-group">
              <input type="text" class="form-control colorfondoform  borde8" autofocus name="nombre"
                placeholder="&#xf007;    Nombre" value="{{nombre}}" style="font-family:Arial, FontAwesome">
            </div>
            <!--Apellido-->
            <div class="form-group">
              <input type="text" class="form-control colorfondoform  borde8 " name="apellido"
                placeholder="&#xf007;    Apellido" value="{{apellido}}" style="font-family:Arial, FontAwesome">
            </div>
            <!--Calle-->
            <div class="form-group">
              <input type="text" class="form-control colorfondoform  borde8 " name="calle"
                placeholder="&#xf2b9;    Calle" value="{{calle}}" style="font-family:Arial, FontAwesome">
            </div>
            <!--Telefono-->
            <div class="form-group">
              <input type="tel" pattern="[0-9]{9}" class="form-control colorfondoform  borde8" name="tlf"
                placeholder="&#xf095;    (+36) Tlf" value="{{tlf}}" style="font-family:Arial, FontAwesome">
            </div>
            <!--Email-->
            <div class="form-group shadow-lg">
              <input type="email" class="form-control colorfondoform  borde8" name="email"
                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" placeholder="&#xf007;    Email"
                style="font-family:Arial, FontAwesome" value="{{email}}">
            </div>
            <!--Password-->
            <div class="form-group shadow-lg">
              <input type="password" class="form-control colorfondoform  borde8 naranja" name="password"
                placeholder="&#xf007;    ContraseÃ±a" value="{{password}}" style="font-family:Arial, FontAwesome">
            </div>
            <!--RepPassword-->
            <div class="form-group shadow-lg">
              <input type="password" class="form-control colorfondoform  borde8 naranja" name="confirm_password"
                placeholder="&#xf007;    Repetir ContraseÃ±a" value="{{confirm_password}}"
                style="font-family:Arial, FontAwesome">
            </div>
            <br>
            <button class="btn buttonn  transparent-background naranja allborders borde30">
              Registrarse
            </button>
            <br> <br> <br>
          </form>
        </div>
      </div>
    </div>
  </div>
  <br><br><br><br><br><br>
</div>