<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center card bg-custom-1 border-dark rounded animated bounceInLeft boxshadow">
      <div class="card-header">
        <h1 class="h4">
          Iniciar Sesion
        </h1>
      </div>
      <img class="rounded-circle mx-auto d-block logo m-4" src="/img/huella.png" alt="Logo">
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group shadow-lg">
            <input type="email" class="form-control" name="email" placeholder="Email" autofocus>
          </div>
          <div class="form-group shadow-lg">
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>
          <button class="btn btn-success negro font-weight-bold btn-block  buttonshadow">
            Iniciar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>