{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-6 mx-auto">
  <div class="card bg-custom-1 border-dark rounded text-center animated bounceInLeft">
    <div class="card-header sombratexto font-weight-bold">
      <h3>Editar Perro</h3>
    </div>
    <div class="card-body shadow-lg">
      <form action="/dogs/edit-dog/{{dog._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group shadow-lg">
          <input type="text" name="nombreperro" class="form-control" placeholder="Nombre del Perro"
            value="{{dog.nombreperro}}">
        </div>
        <div class="form-group shadow-lg">
          <select id="inputState" class="form-control" placeholder="Raza" name="raza">
            <option selected>{{dog.raza}}</option>
            <option>Beagle</option>
            <option>BichonMaltes</option>
            <option>Boxer</option>
            <option>Bulldog</option>
            <option>BulldogFrances</option>
            <option>Caniche</option>
            <option>Carlino</option>
            <option>Chihuahua</option>
            <option>ChowChow</option>
            <option>Doberman</option>
            <option>GoldenRetriever</option>
            <option>HuskySiberiano</option>
            <option>LabradorRetriever</option>
            <option>Mastin</option>
            <option>PastorAleman</option>
            <option>PastorVasco</option>
            <option>PitBull</option>
            <option>Pomeriana</option>
            <option>Pug</option>
            <option>Rottweiler</option>
            <option>Sanbernardo</option>
            <option>ShibaInu</option>
            <option>ShihTzu</option>
            <option>Yorkshire</option>
          </select>
        </div>
        <div class="form-group shadow-lg">
          <input type="number" name="edadperro" class="form-control" placeholder="Edad del Perro" min="1" max="20"
            value="{{dog.edadperro}}">
        </div>
        <div class="form-group shadow-lg">
          <textarea name="descripcion" class="form-control">{{dog.descripcion}}</textarea>
        </div>
        <div class="form-group shadow-lg">
          <input type="tel" pattern="[0-9]{9}" class="form-control" name="tlfd" placeholder="(+36) Tlf DueÃ±o"
            value="{{dog.tlfd}}">
        </div>
        <div class="form-group shadow-lg">
          <input type="tel" pattern="[0-9]{9}" class="form-control" name="tlfc" placeholder="(+36) Tlf Clinica"
            value="{{dog.tlfc}}">
        </div>

        <div class="form-group">
          <button class="btn btn-success negro font-weight-bold btn-block shadow-lg" type="submit">
            Guardar Cambios
          </button>
        </div>
      </form>
    </div>
  </div>
</div>