<style>
  .row {
    font-family: "Calibri", "sans-serif";
    bottom: 0;
  }
</style>
<script>
  const refreshButton = document.querySelector('.btn btn-dark shadow-lg');

  const refreshPage = () => {
    location.reload();
  }

  refreshButton.addEventListener('click', refreshPage)

</script>

<div class="row" style="width: 100%">
  <!--<div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">-->
  <div id="success" class="alert alert-success {{#if noMessages}}d-none{{/if}}">
    {{successMsg}}
  </div>
</div>
<br><br>
{{#each products}}
<div class="row">
  {{#each this}}
  {{#operaciones this.cantidad '>' 0}}
  <div class="col-sm-shop col-md-4">
    <div class="thumbnail">
      <img class="img-responsive" src="{{this.imagePath}}" alt="..."><br>
      <div class="caption">
        <h4>{{this.title}}</h4>
        <p class="captionText">{{this.description}}</p>
        <div class="clearfix">
          <div class="price">
            <h6>{{this.price}} €</h6>
          </div>
          <br>
          <div class="En stock">
            <h6>En stock : {{this.cantidad}} uds</h6>
          </div>
          <p>
            <!--<a href="#" class="btn btn-primary pull-right" role="button">Buy Now</a>-->
            <a href="/add_to_cart/{{this.id}}" class="btn btn-dark shadow-lg" role="button"
              style="float: right, margin-bottom:0">Añadir al carrito<i class="fas fa-cart-arrow-down"></i></a>
          </p>
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <div class="col-sm-shop2 col-md-4">
    <div class="thumbnail">
      <img class="img-responsive" src="{{this.imagePath}}" alt="..."><br>
      <div class="caption">
        <h4>{{this.title}}</h4>
        <p class="captionText">{{this.description}}</p>
        <div class="clearfix">
          <div class="price">
            <h6>{{this.price}} €</h6>
          </div>
          <br>
          <div class="En stock">
            <h6>En stock : {{this.cantidad}} uds</h6>
          </div>
          <p>
            <!--<a href="#" class="btn btn-primary pull-right" role="button">Buy Now</a>-->
            <h3>No disponible</h3>
          </p>
        </div>
      </div>
    </div>
  </div>

  {{/operaciones}}
  {{/each}}
</div>
{{/each}}